<% content_for :title do %>
  Listando seções
<% end %>
<h1>Listando seções</h1>
<table id="index_table">
  <tr>
    <th>Title</th>
    <th>ID</th>
    <th>Color</th>
  </tr>
  <% @sections.all.each do |section| %>
    <tr>
      <td> <%= section.title %> </td>
      <td> <%= section.id %> </td>
      <td style="color:<%= section.color %>;"> <%= section.color %> </td>
      <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Section', new_section_path %>