<% content_for :title do %>
  Listando seções
<% end %>
<table id="index_table">
  <tr>
    <th>Título</th>
    <th>Id</th>
    <th>Ordem</th>
    <th>Cor</th>
  </tr>
  <% @sections.each do |section| %>
    <tr>
      <td><%= section.name %></td>
      <td><%= section.id %></td>
      <td><%= section.ordering %></td>
      <td style="color:<%= section.color %>;"> <%= section.color %> </td>
      <td><%= link_to 'Visualizar', section %></td>
        <td><%= link_to 'Editar', edit_section_path(section) %></td>
        <td><%= link_to 'Deletar', section, method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Nova seção', new_section_path %>