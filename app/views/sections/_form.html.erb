<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  <span>Use HEX colors for the color field. There's a list of them <a href="http://www.w3schools.com/html/html_colornames.asp">here</a>. You can also generate your own <a href="http://www.color-hex.com/">here.</a> </span>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
