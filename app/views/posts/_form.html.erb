<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "erro impediu", "erros impediram") %> que esse post fosse salvo:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :region_id, value: current_region.id %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <br><br>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.cktext_area :content %>
  </div>
  <div class="field">
    <%= f.label :published_at %><br>
    <%= f.datetime_select :published_at %>
  </div>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :front_title %>
    <%= f.text_field :front_title %>
  </div>
  <div class="field">
    <%= f.label :front_content %><br>
    <%= f.text_area :front_content %>
  </div>
  <div class="field">
    <%= f.label :ordering %>
    <%= f.select :ordering, [nil,1,2,3,4] %>
    
  </div>
  <div class="field">
    <%= f.label :section_id %>
    <%= f.select :section_id, Section.all.map { |section| [section.name, section.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
