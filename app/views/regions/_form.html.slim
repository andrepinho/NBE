= form_for(@region) do |f|
  - if @region.errors.any?
    #error_explanation
      h2 = "#{pluralize(@region.errors.count, "erro impediu", "erros impediram")} que esta regi√£o fosse salva:"
      ul
        - @region.errors.full_messages.each do |msg|
          li= msg
  .field
    = f.label :name
    = f.text_field :name, class: "small"
  .field
    = f.label :subdomain
    = f.text_field :subdomain, class: "small"
  .field
    = f.label :facebook
    = f.text_field :facebook, class: "medium"
  .field
    = f.label :group
    = f.select :group, ['Sul','Sudeste','Centro-Oeste','Nordeste','Norte']
  .field
    = f.label :latitude
    = f.text_field :latitude, class: "small"
  .field
    = f.label :longitude
    = f.text_field :longitude, class: "small"
  .field
    = f.label :background
    = f.file_field :background
  .actions
    = f.submit class: "button"
    div
      | ou 
      a href="javascript:history.back()" cancelar