<% content_for :title do %>
  Listando regiões
<% end %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Subdomínio</th>
      <th>URL da imagem de fundo</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr class=<%= cycle("even", "odd") %>>
        <td><%= link_to region.name, region %></td>
        <td><%= region.subdomain %></td>
        <td><%= image_tag region.background_url %></td>
        <td><%= link_to 'Editar', edit_region_path(region) %></td>
        <td><%= link_to 'Deletar', region, method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="actions"><%= link_to 'Nova região', new_region_path, class: "button" %></div>
