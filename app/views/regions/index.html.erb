<% content_for :title do %>
  Listando regiões
<% end %>
<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Subdomínio</th>
      <th>URL da imagem de fundo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.subdomain %></td>
        <td><%= region.background_url %></td>
        <td><%= link_to 'Visualizar', region %></td>
        <td><%= link_to 'Editar', edit_region_path(region) %></td>
        <td><%= link_to 'Deletar', region, method: :delete, data: { confirm: 'Você está certo disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

